-#  This file is app/views/movies/index.html.haml
%h1 All Movies

= form_tag movies_path, :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    = check_box_tag "ratings[#{rating}]", 1, if params[:ratings]; params[:ratings].include?(rating) else true end
  = submit_tag 'Refresh'

%table#movies
  %thead
    %tr
      %th{:class => ("hilite" if @sort == "Title")}= link_to "Movie Title" , movies_path(:item => "Title") 
      %th Rating
      %th{:class => ("hilite" if @sort == "Date")}=link_to "Release Date" , movies_path(:item => "Date") 
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
